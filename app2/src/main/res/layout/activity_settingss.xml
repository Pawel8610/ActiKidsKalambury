<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"




    tools:context="com.fgamesteam.free1.actikids.Settings"
    android:background="#3fd2ed">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView37"
        android:src="@drawable/settingsscreen0"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true" />
    <!--CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wycisz polecenia gÅ‚osowe"
        android:id="@+id/checkBox"
        android:layout_below="@+id/imageView37"
        android:layout_centerHorizontal="true"
        android:textSize="17dp" /-->
    <!--CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wycisz alarm"
        android:id="@+id/checkBox2"
        android:textSize="17dp"

        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox" /-->

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="85"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:clickable="false"
        android:minWidth="140dp"

        android:layout_above="@+id/imageView44"
        android:layout_below="@+id/imageView37"
        android:layout_toRightOf="@+id/imageView4"
        android:progressBackgroundTint="#4a9fed"
        android:progressBackgroundTintMode="src_over"
        android:progressTint="#4a9fed"
        android:thumbTint="#4a9fed" />

    <!--TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Czas stopera (5-90s):"
        android:id="@+id/textView6"
        android:paddingTop="15dp"
        android:layout_below="@+id/checkBox2"
        android:layout_centerHorizontal="true"
        android:textSize="17dp" /-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:maxHeight="50dp"
        android:src="@drawable/timer"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/imageView37"
        android:layout_alignLeft="@+id/imageView37"
        android:layout_alignStart="@+id/imageView37" />
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="90s"
        android:id="@+id/textView7"
        android:textSize="24dp"
        android:paddingTop="15dp"
        android:textColor="@color/colorAccent"
         android:layout_marginRight="15dp"
         android:layout_marginEnd="15dp"
         android:layout_alignBottom="@+id/imageView4"
         android:layout_toLeftOf="@+id/seekBar"
         android:layout_toStartOf="@+id/seekBar"
         android:layout_marginBottom="11dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView11"
        android:maxHeight="70dp"
        android:adjustViewBounds="true"
        android:src="@drawable/savesettings"
        android:layout_below="@+id/imageView44"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView38"
        android:src="@drawable/settingsscreen1"
        android:adjustViewBounds="true"
        android:layout_below="@+id/imageView11"
        android:layout_centerHorizontal="true"
       />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView40"
        android:src="@drawable/polecenia_glosowe_on"
        android:onClick="ZmienObrazek"
        android:layout_alignTop="@+id/imageView41"
        android:layout_alignLeft="@+id/imageView41"
        android:layout_alignRight="@+id/imageView41"
        android:layout_alignBottom="@+id/imageView41" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView41"
        android:src="@drawable/polecenia_glosowe_off"
        android:onClick="ZmienObrazek"
        android:visibility="visible"
        android:maxHeight="70dp"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/imageView44"
        android:layout_toRightOf="@+id/imageView11"
        android:layout_toEndOf="@+id/imageView11"
        android:layout_marginTop="13dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView42"
        android:src="@drawable/alarm_on"
        android:onClick="ZmienObrazek2"
        android:layout_alignTop="@+id/imageView43"
        android:layout_alignLeft="@+id/imageView43"
        android:layout_alignRight="@+id/imageView43"
        android:layout_alignBottom="@+id/imageView43"
         />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView43"
        android:src="@drawable/alarm_off"
        android:onClick="ZmienObrazek2"
        android:visibility="visible"
        android:maxHeight="60dp"
        android:adjustViewBounds="true"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/seekBar"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView44"
        android:src="@drawable/settingsscreen2"
        android:maxHeight="110dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/imageView4"
        android:layout_toLeftOf="@+id/imageView40"
        android:layout_toStartOf="@+id/imageView40" />
    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_settings" />
</RelativeLayout>
